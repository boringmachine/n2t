package Assembler;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;

public class Parser {

	File file;
	FileInputStream in;
	InputStreamReader reader;
	String command;
	String symbol;
	
	
	final int A_COMMAND = 0x1;
	final int C_COMMAND = 0x2;
	final int L_COMMAND = 0x4;
	
	Scanner scan;
	
	Parser(String filename) throws FileNotFoundException{
		this.file = new File(filename);
		in = new FileInputStream(file);
		reader = new InputStreamReader(in);
		scan = new Scanner(in);
	}
	
	boolean hasMoreCommands() throws IOException{
		return reader.ready();
	}
	
	void advance() throws IOException{
		char[] data = new char[(int) file.length()];
		reader.read(data);
		String str = new String(data);
		str = str.replaceAll(" ", "").replaceAll("//.*\r\n?\r?\n?", "");
	}
	
	
	int commandType(){
		return 1;
	}
	
	String symbol() {
		return "a";
	}
	
	String dest () {
		return "";
	}
	
	String jump () {
		return "";
	}
	
	
	public static void main(String args[]) throws IOException{
		Parser a = new Parser("Add.asm");
		char[] data = new char[(int) a.file.length()];
		a.reader.read(data);
		String b = new String(data);
		b = b.replaceAll(" ", "").replaceAll("//.*\r\n?\r?\n?", "");
		System.out.println(a.scan.next());
	}

	
}
