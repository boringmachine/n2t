package Assembler;

import java.util.LinkedHashMap;

public class SymbolTable extends LinkedHashMap<String, Integer> {

	SymbolTable(){
		for(int i=0; i<16; i++){
			this.put("R"+Integer.toString(i), i);
		}
		this.put("SP", 0x0);
		this.put("LCL", 0x1);
		this.put("ARG", 0x2);
		this.put("THIS", 0x3);
		this.put("THAT", 0x4);
		this.put("SCREEN", 0x4000);
		this.put("KBD", 0x6000);
	}
}
